@startuml

package presentation {
     class GameView {
        + displayGrid(rows:int, cols:int)
        + updateTile(row:int, col:int, letter:char, color:String)
        + showMessage(message:String)
     }
     class KeyboardView {
        + displayKeyboard()
        + updateKeyColor(key:char, color:String)
     }
     class AnimationView {
        + playTileFlip(row:int, col:int, durationMs:int)
        + playRowShake(row:int, durationMs:int)
        + playWinCelebration()
     }
     class MainMenuView {
        + displayMenu()
     }
     class StatsView {
        + displayStats()
     }
     class SettingsView {
        + displaySettings()
     }

     class GameController {
        - engine: domain.WordleGameEngine
        - state: domain.GameState
        - dataManager: data.DataManager
        + startNewGame()
        + submitGuess(guess:String)
        + useHint()
        + endGame()
     }
     class InputController {
        - gameController: GameController
        + handleKeyPress(key:char)
        + handleBackspace()
        + handleEnter()
     }
     class MenuController {
        - gameController: GameController
        + startDaily()
        + startRandom()
        + startThemed()
        + showStats()
        + showSettings()
     }
     class AnimationController {
        - gameView: GameView
        - keyboardView: KeyboardView
        - animationView: AnimationView
        + animateGuessResult()
        + animateInvalidInput()
        + animateHint(letter:char, position:int)
     }
 }
 GameController --> GameView
 GameController --> KeyboardView
 GameController --> AnimationController

 InputController --> GameController
 MenuController --> GameController

 AnimationController --> AnimationView
 AnimationController --> GameView
 AnimationController --> KeyboardView
